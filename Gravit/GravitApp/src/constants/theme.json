{
  "colors": {
    "primary": {
      "background": "#141414",
      "surface": "#2a2a2a",
      "card": "#141414",
      "cardBorder": "#141414"
    },
    "accent": {
      "primary": "#ff6b47",
      "secondary": "#ff6b47",
      "success": "#ffffff",
      "warning": "#ff6b47"
    },
    "text": {
      "primary": "#ffffff",
      "secondary": "#b0b0b0",
      "muted": "#808080",
      "accent": "#ff6b47"
    },
    "states": {
      "positive": "#ffffff",
      "negative": "#ff6b47",
      "neutral": "#b0b0b0"
    }
  },
  "typography": {
    "fontFamily": "Inter, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif",
    "hero": {
      "fontSize": 28,
      "fontWeight": "700",
      "lineHeight": 34,
      "color": "#ffffff"
    },
    "title": {
      "fontSize": 24,
      "fontWeight": "600",
      "lineHeight": 31,
      "color": "#ffffff"
    },
    "subtitle": {
      "fontSize": 18,
      "fontWeight": "500",
      "lineHeight": 25,
      "color": "#b0b0b0"
    },
    "body": {
      "fontSize": 16,
      "fontWeight": "400",
      "lineHeight": 24,
      "color": "#b0b0b0"
    },
    "caption": {
      "fontSize": 14,
      "fontWeight": "400",
      "lineHeight": 20,
      "color": "#808080"
    },
    "small": {
      "fontSize": 12,
      "fontWeight": "400",
      "lineHeight": 16,
      "color": "#808080"
    }
  },
  "spacing": {
    "xs": 4,
    "sm": 8,
    "md": 16,
    "lg": 24,
    "xl": 32,
    "xxl": 48
  },
  "borderRadius": {
    "sm": 8,
    "md": 12,
    "lg": 16,
    "xl": 20,
    "pill": 9999
  },
  "components": {
    "card": {
      "backgroundColor": "#141414",
      "borderRadius": 16,
      "padding": 20,
      "borderColor": "#141414",
      "borderWidth": 0,
      "shadowColor": "#000",
      "shadowOffset": {
        "width": 0,
        "height": 4
      },
      "shadowOpacity": 0.3,
      "shadowRadius": 6,
      "elevation": 0
    },
    "button": {
      "primary": {
        "backgroundColor": "#ff6b47",
        "borderRadius": 12,
        "paddingVertical": 16,
        "paddingHorizontal": 24,
        "fontSize": 16,
        "fontWeight": "600",
        "color": "#ffffff"
      },
      "secondary": {
        "backgroundColor": "transparent",
        "borderColor": "#ff6b47",
        "borderWidth": 2,
        "borderRadius": 12,
        "paddingVertical": 16,
        "paddingHorizontal": 24,
        "fontSize": 16,
        "fontWeight": "600",
        "color": "#ff6b47"
      }
    },
    "input": {
      "backgroundColor": "#2a2a2a",
      "borderColor": "#2a2a2a",
      "borderRadius": 12,
      "borderWidth": 0,
      "paddingVertical": 14,
      "paddingHorizontal": 16,
      "fontSize": 16,
      "color": "#ffffff",
      "marginBottom": 24
    },
    "inputFocus": {
      "borderColor": "#ff6b47",
      "shadowColor": "#ff6b47",
      "shadowOffset": {
        "width": 0,
        "height": 0
      },
      "shadowOpacity": 0.3,
      "shadowRadius": 4,
      "elevation": 2
    }
  }
}